#IPADDR/PREFIXLEN dev IFNAME

rm -f sponge.out sponge.notify sponge.status
mkfifo sponge.notify
touch sponge.out

#./arpsponge 10.1.1.0/25 dev eth0:1 \
#../sbin/arpsponge 193.194.136.128/25 dev eth0 \
arpsponge 193.194.136.128/25 dev eth0 \
  --verbose=1		\
  --queuedepth=20	\
  --sweep=900/3600	\
  --rate=50			\
  --pending=3		\
  --notify=sponge.notify	\
  --statusfile=sponge.status \
	2>&1 | es -a -s sponge.out &
# --dummy \
tail -f sponge.out
